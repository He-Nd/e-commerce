doctype
html(lang="en")
    include parts/head.pug
    body

        nav.navbar.navbar-dark.bg-primary
            a.navbar-brand(href="/") Logo
            div
                a.nav-link(href="/login") Login
                a.nav-link(href="/register") Register
    div.w-50.mx-auto.mt-5.p-3
        h1.text-center Register
        form
            div.form-group
                label(for="exampleInputEmail1") Email address
                input.form-control#exampleInputEmail1(type="email",  aria-describedby="emailHelp", placeholder="Enter email")
                small.form-text.text-muted#emailHelp  We'll never share your email with anyone else.
  
            div.form-group
                label(for="exampleInputPassword1") Password
                input.form-control#exampleInputPassword1(type="password", placeholder="Password")
            button.btn.btn-primary(type="submit") Submit

